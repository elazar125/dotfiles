// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "alt+right",
        "command": "cursorWordPartRight",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+right",
        "command": "cursorWordPartRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "alt+left",
        "command": "cursorWordPartStartLeft",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+left",
        "command": "cursorWordPartStartLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "alt+backspace",
        "command": "deleteWordPartLeft",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "shift+alt+backspace",
        "command": "deleteWordPartRight",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "alt+`",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminalFocus"
    },
    {
        "key": "alt+`",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.terminal.new",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+u",
        "command": "editor.action.transformToUppercase",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+l",
        "command": "editor.action.transformToLowercase",
        "when": "editorTextFocus"
    },
    {
        "command": "incrementor.incByOne",
        "key": "ctrl+up"
    },
    {
        "command": "incrementor.decByOne",
        "key": "ctrl+down"
    },
    {
        "key": "ctrl+alt+o",
        "command": "workbench.action.addRootFolder"
    },
    {
        "key": "ctrl+shift+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+w",
        "command": "toggle",
        "args": {
            "id": "ShowWhiteSpace",
            "value": [
                {
                    "editor.renderIndentGuides": true,
                    "editor.renderWhitespace": "all",
                },
                {
                    "editor.renderIndentGuides": false,
                    "editor.renderWhitespace": "none",
                },
            ]
        }
    },
    {
        "key": "ctrl+alt+t",
        "command": "toggle",
        "args": {
            "id": "TrimTrailing",
            "value": [
                {
                    "files.trimTrailingWhitespace": false,
                    "files.insertFinalNewline": false,
                },
                {
                    "files.trimTrailingWhitespace": true,
                    "files.insertFinalNewline": true,
                },
            ]
        }
    },
    {
        "key": "ctrl+alt+/",
        "command": "toggle",
        "args": {
            "id": "CodeFolding",
            "value": [
                {
                    "editor.folding": false,
                },
                {
                    "editor.folding": true,
                },
            ]
        }
    },
    {
        "key": "ctrl+alt+p",
        "command": "toggle",
        "args": {
            "id": "PowerMode",
            "value": [
                {
                    "powermode.enabled": false,
                },
                {
                    "powermode.enabled": true,
                },
            ]
        }
    },
    {
        "key": "ctrl+alt+n",
        "command": "toggle",
        "args": {
            "id": "NewbieMode",
            "value": [
                {
                    "breadcrumbs.enabled": false,
                    "csharp.referencesCodeLens.enabled": false,
                    "editor.folding": false,
                    "editor.fontFamily": "Fantasque Sans Mono",
                    "editor.fontSize": 14,
                    "editor.hideCursorInOverviewRuler": true,
                    "editor.highlightActiveIndentGuide": false,
                    "editor.lightbulb.enabled": false,
                    "editor.matchBrackets": false,
                    "editor.minimap.enabled": false,
                    "editor.occurrencesHighlight": false,
                    "editor.overviewRulerBorder": false,
                    "editor.overviewRulerLanes": -1,
                    "editor.renderIndentGuides": false,
                    "editor.renderLineHighlight": "none",
                    "editor.snippetSuggestions": "top",
                    "explorer.decorations.badges": false,
                    "explorer.openEditors.visible": 0,
                    "extensions.ignoreRecommendations": true,
                    "window.menuBarVisibility": "toggle",
                    "workbench.activityBar.visible": false,
                    "workbench.colorTheme": "Darcula",
                    "workbench.iconTheme": "material-icon-theme",
                    "workbench.statusBar.visible": false,
                    "workbench.tips.enabled": false,
                    "scm.diffDecorations": "none",
                },
                {
                    "breadcrumbs.enabled": true,
                    "csharp.referencesCodeLens.enabled": true,
                    "editor.folding": true,
                    "editor.fontFamily": "Consolas, 'Courier New', monospace",
                    "editor.fontSize": 14,
                    "editor.hideCursorInOverviewRuler": false,
                    "editor.highlightActiveIndentGuide": true,
                    "editor.lightbulb.enabled": true,
                    "editor.matchBrackets": true,
                    "editor.minimap.enabled": true,
                    "editor.occurrencesHighlight": true,
                    "editor.overviewRulerBorder": true,
                    "editor.overviewRulerLanes": 3,
                    "editor.renderIndentGuides": true,
                    "editor.renderLineHighlight": "line",
                    "editor.snippetSuggestions": "inline",
                    "explorer.decorations.badges": true,
                    "explorer.openEditors.visible": 9,
                    "extensions.ignoreRecommendations": false,
                    "window.menuBarVisibility": "default",
                    "workbench.activityBar.visible": true,
                    "workbench.colorTheme": "Default Dark+",
                    "workbench.iconTheme": "vs-seti",
                    "workbench.statusBar.visible": true,
                    "workbench.tips.enabled": true,
                    "scm.diffDecorations": "all",
                }
            ]
        }
    },
    {
        "key": "ctrl+alt+f",
        "command": "toggle",
        "args": {
            "id": "DumbFonts",
            "value": [
                {
                    "editor.fontFamily": "Consolas, 'Courier New', monospace",
                    "editor.fontSize": 14
                },
                {
                    "editor.fontFamily": "Comic Sans MS",
                    "editor.fontSize": 14
                },
                {
                    "editor.fontFamily": "Ink Free",
                    "editor.fontSize": 16
                },
                {
                    "editor.fontFamily": "Fantasque Sans Mono",
                    "editor.fontSize": 14
                },
            ]
        }
    },
    {
        "key": "ctrl+alt+g",
        "command": "toggle",
        "args": {
            "id": "GitLens",
            "value": [
                {
                    "gitlens.currentLine.enabled": false,
                },
                {
                    "gitlens.currentLine.enabled": true,
                },
            ]
        }
    },
    {
        "key": "ctrl+i",
        "command": "dakara-transformer.selectLines"
    },
    {
        "key": "ctrl+t ctrl+p",
        "command": "workbench.actions.view.problems"
    },
    {
        "key": "ctrl+shift+m",
        "command": "-workbench.actions.view.problems"
    },
    {
        "key": "ctrl+shift+m",
        "command": "editor.action.selectToBracket"
    },
    {
        "key": "ctrl+alt+up",
        "command": "-incrementor.incByTenth"
    },
    {
        "key": "ctrl+alt+down",
        "command": "-incrementor.decByTenth"
    }
]
