# Make completion a bit easier
# Show the completed bit in a different
# colour to make things obvious, and
# give me options right away
set colored-completion-prefix on
set show-all-if-ambiguous on
set completion-ignore-case on
# map-case is oddly named, it
# makes - and _ interchangable
set completion-map-case on
set completion-query-items 40

# I hate the bell
set bell-style none

# disable/enable 8bit input
set input-meta on
set output-meta on
set convert-meta off

# Make directories and symlinks obvious
# Show file types by colour, but I don't
# need extra characters aside from dirs
set colored-stats on
set visible-stats off
set mark-directories on
set mark-symlinked-directories on

# In vi mode I still want a few emacs-style
# shortcuts, it's a little easier than switching
# to normal mode for these few things
set keymap vi-insert
Control-l: clear-screen
Space:magic-space
Meta-.: yank-last-arg
Control-w: unix-word-rubout
Control-u: unix-line-discard
